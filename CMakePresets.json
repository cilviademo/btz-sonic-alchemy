{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 22,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "default",
      "displayName": "Default Release Build",
      "description": "Standard release configuration with optimizations",
      "binaryDir": "${sourceDir}/build",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "debug",
      "displayName": "Debug Build",
      "description": "Debug configuration with symbols and assertions",
      "binaryDir": "${sourceDir}/build-debug",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "asan",
      "displayName": "AddressSanitizer (Memory Errors)",
      "description": "Detect memory errors: use-after-free, buffer overflows, leaks",
      "binaryDir": "${sourceDir}/build-asan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-fsanitize=address -fno-omit-frame-pointer -g -O1",
        "CMAKE_C_FLAGS": "-fsanitize=address -fno-omit-frame-pointer -g -O1",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=address",
        "CMAKE_SHARED_LINKER_FLAGS": "-fsanitize=address",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "ubsan",
      "displayName": "UndefinedBehaviorSanitizer (UB Detection)",
      "description": "Detect undefined behavior: null derefs, signed overflow, misaligned access",
      "binaryDir": "${sourceDir}/build-ubsan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-fsanitize=undefined -fno-omit-frame-pointer -g -O1 -fno-sanitize-recover=all",
        "CMAKE_C_FLAGS": "-fsanitize=undefined -fno-omit-frame-pointer -g -O1 -fno-sanitize-recover=all",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=undefined",
        "CMAKE_SHARED_LINKER_FLAGS": "-fsanitize=undefined",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "tsan",
      "displayName": "ThreadSanitizer (Race Conditions)",
      "description": "Detect data races and deadlocks in multithreaded code",
      "binaryDir": "${sourceDir}/build-tsan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-fsanitize=thread -fno-omit-frame-pointer -g -O1",
        "CMAKE_C_FLAGS": "-fsanitize=thread -fno-omit-frame-pointer -g -O1",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=thread",
        "CMAKE_SHARED_LINKER_FLAGS": "-fsanitize=thread",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "msan",
      "displayName": "MemorySanitizer (Uninitialized Memory)",
      "description": "Detect reads of uninitialized memory (requires special libc++)",
      "binaryDir": "${sourceDir}/build-msan",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-fsanitize=memory -fno-omit-frame-pointer -g -O1 -fsanitize-memory-track-origins",
        "CMAKE_C_FLAGS": "-fsanitize=memory -fno-omit-frame-pointer -g -O1 -fsanitize-memory-track-origins",
        "CMAKE_EXE_LINKER_FLAGS": "-fsanitize=memory",
        "CMAKE_SHARED_LINKER_FLAGS": "-fsanitize=memory",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "rt-checks",
      "displayName": "Real-Time Safety Checks",
      "description": "Custom configuration for audio thread safety validation",
      "binaryDir": "${sourceDir}/build-rt-checks",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-DBTZ_RT_CHECKS=1 -g -O2",
        "CMAKE_C_FLAGS": "-DBTZ_RT_CHECKS=1 -g -O2",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "valgrind",
      "displayName": "Valgrind-Friendly Build",
      "description": "Build optimized for Valgrind memory analysis",
      "binaryDir": "${sourceDir}/build-valgrind",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RelWithDebInfo",
        "CMAKE_CXX_FLAGS": "-g -O1",
        "CMAKE_C_FLAGS": "-g -O1",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "coverage",
      "displayName": "Code Coverage Build",
      "description": "Instrumented for gcov/lcov coverage analysis",
      "binaryDir": "${sourceDir}/build-coverage",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-g -O0 --coverage -fprofile-arcs -ftest-coverage",
        "CMAKE_C_FLAGS": "-g -O0 --coverage -fprofile-arcs -ftest-coverage",
        "CMAKE_EXE_LINKER_FLAGS": "--coverage",
        "CMAKE_SHARED_LINKER_FLAGS": "--coverage",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    },
    {
      "name": "release-with-asserts",
      "displayName": "Release with Assertions",
      "description": "Optimized build but with runtime assertions enabled",
      "binaryDir": "${sourceDir}/build-release-asserts",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-DBTZ_ENABLE_ASSERTS=1 -O3",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "default",
      "configurePreset": "default"
    },
    {
      "name": "debug",
      "configurePreset": "debug"
    },
    {
      "name": "asan",
      "configurePreset": "asan"
    },
    {
      "name": "ubsan",
      "configurePreset": "ubsan"
    },
    {
      "name": "tsan",
      "configurePreset": "tsan"
    },
    {
      "name": "msan",
      "configurePreset": "msan"
    },
    {
      "name": "rt-checks",
      "configurePreset": "rt-checks"
    },
    {
      "name": "valgrind",
      "configurePreset": "valgrind"
    },
    {
      "name": "coverage",
      "configurePreset": "coverage"
    },
    {
      "name": "release-with-asserts",
      "configurePreset": "release-with-asserts"
    }
  ]
}
